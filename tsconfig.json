{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
    ],
    "esModuleInterop": true,                             
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": [
    "src",
    "test"
  ]
}
